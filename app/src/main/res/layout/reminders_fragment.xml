<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminder_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66121212"
    tools:context="georeminder.MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reminders_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="42dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/reminder_constraint"
        app:layout_constraintEnd_toEndOf="@+id/reminder_constraint"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <FrameLayout
        android:id="@+id/recycler_frame_leyout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73121212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#73121212"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#121212"
                android:text="TextView"
                android:textColor="@android:color/tertiary_text_light" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#73121212" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/basic_recycler_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#00121212"
                android:visibility="visible">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>